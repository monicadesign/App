<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        style="@style/TitleStyle"
        android:layout_marginTop="@dimen/margemTop"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="@dimen/margemTop"
            android:layout_width="@dimen/BoxWidthregisto"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margemLeft"
            android:id="@+id/text_view_2"
            android:text="@string/nome"
            style="@style/EditTextBox"/>


        <EditText
            android:layout_marginTop="@dimen/margemTop"
            android:layout_marginEnd="@dimen/margemRight"
            android:layout_alignParentEnd="true"
            android:text="@string/apelido"
            style="@style/EditTextBox"
            android:layout_width="@dimen/BoxWidthregisto"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/BoxWidthregisto"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/espaçoEntreCaixas"
            android:id="@+id/tv_date"
            android:layout_marginLeft="@dimen/margemLeft"
            android:text="Select Data"
            style="@style/EditTextBox"
            android:textSize="20sp"/>

        <EditText
        android:layout_marginTop="@dimen/espaçoEntreCaixas"
        android:layout_marginEnd="@dimen/margemRight"
        android:layout_alignParentEnd="true"
        android:text="@string/apelido"
        style="@style/EditTextBox"
        android:layout_width="@dimen/BoxWidthregisto"
        android:inputType="phone"
        android:digits="@s"


    </RelativeLayout>

</LinearLayout>



