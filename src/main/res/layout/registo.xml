<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor6">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        style="@style/TitleStyle"/>

            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText android:layout_marginTop="@dimen/margemTop"
            android:layout_width="@dimen/BoxWidthregisto"
            android:layout_marginLeft="@dimen/margemLeft"
            android:hint="@string/nome"
            style="@style/EditTextBox"
            android:id="@+id/NomeReg"/>

            <EditText
            android:layout_marginTop="@dimen/margemTop"
            android:layout_marginRight="@dimen/margemRight"
            android:layout_alignParentEnd="true"
            android:hint="@string/apelido"
            style="@style/EditTextBox"
            android:layout_width="@dimen/BoxWidthregisto"
            android:id="@+id/ApelidoReg"/>
            </RelativeLayout>

            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="@dimen/BoxWidthregisto"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/espaçoEntreCaixas"
            android:layout_marginLeft="@dimen/margemLeft"
            android:hint="Data de Nascimento"
            style="@style/EditTextBox"
            android:id="@+id/tvDate"/>

            <EditText
            android:layout_marginTop="@dimen/espaçoEntreCaixas"
            android:layout_marginRight="@dimen/margemRight"
            android:layout_alignParentEnd="true"
            android:hint="@string/Numberphone"
            style="@style/EditTextBox"
            android:layout_width="@dimen/BoxWidthregisto"
            android:inputType="phone"
            android:digits="@string/Numberphone"
            android:id="@+id/ContactoReg"/>

            </RelativeLayout>

            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
            android:layout_marginTop="@dimen/espaçoEntreCaixas"
            android:layout_width="@dimen/BoxWidthregisto"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margemRight"
            android:hint="@string/email"
            style="@style/EditTextBox"
            android:id="@+id/EmailReg"/>

           <Spinner
               android:layout_marginTop="10dp"
               android:layout_width="@dimen/BoxWidthregisto"
               android:layout_alignParentStart="true"
               android:layout_marginLeft="@dimen/margemLeft"
               android:hint="@string/Distrito"
               style="@style/EditTextBox"
               android:id="@+id/aSpinner"
               android:entries="@array/Distritos"
               android:textAlignment="center"/>

            </RelativeLayout>

                <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                android:id="@+id/btn_go_to_sobre"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="190dp"
                android:text="@string/register"
                android:layout_centerHorizontal="true"
                style="@style/ButtonStyle"/>

                <Button
                android:id="@+id/btn_go_to_main"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="130dp"
                android:text="@string/Voltar"
                android:layout_centerHorizontal="true"
                style="@style/ButtonStyle"/>
                </RelativeLayout>

</LinearLayout>



