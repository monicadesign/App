<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor6"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login" />

    <EditText
        style="@style/EditTextBox"
        android:layout_width="@dimen/BoxWidthLogin"
        android:layout_marginTop="@dimen/margemTop"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <EditText
        style="@style/EditTextBox"
        android:layout_width="@dimen/BoxWidthLogin"
        android:layout_margin="@dimen/espaÃ§oEntreCaixas"
        android:hint="@string/PassWord"
        android:inputType="textPassword"
        android:text="@string/PassWord" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margemStart"
        android:text="@string/Aviso"
        android:textColor="@color/appcolor4"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/btn_go_to_sobre"
            style="@style/ButtonStyle"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="190dp"
            android:text="@string/login" />

        <Button
            android:id="@+id/btn_go_to_main"
            style="@style/ButtonStyle"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="130dp"
            android:text="@string/Voltar" />
    </RelativeLayout>
</LinearLayout>