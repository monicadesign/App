<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryColor</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/appcolor2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/appcolor1</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/appcolor1</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginTop">55dp</item>>

    </style>

    <style name="EditTextBox">

        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/appcolor3</item>
        <item name="android:textColorHint">@color/appcolor3</item>
        <item name="android:background">@color/appcolor1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>

    </style>

        <style name="EstiloTextoCaixas">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">15sp</item>
            <item name="android:textStyle">normal</item>
            <item name="android:textColor">@color/appcolor5</item>
            <item name="android:background">@color/appcolor1</item>
            <item name="android:gravity">center_vertical</item>

        </style>

    <style name="EstiloIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/appcolor1</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>

    </style>

    <style name="EstiloTextoSobre">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/appcolor1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>

    </style>
